{
  "manifest_version": 3,
  "name": "Tab Manager Shortcuts",
  "version": "1.0",
  "description": "Shortcut Alt+F4 to close tab, Alt+F5 to close tabs to the right.",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "close-current-tab": {
      "suggested_key": {
        "default": "Alt+F4"
      },
      "description": "Close the current tab"
    },
    "close-tabs-to-right": {
      "suggested_key": {
        "default": "Alt+F5"
      },
      "description": "Close all tabs to the right"
    },
    "close-tabs-to-left": {
      "suggested_key": {
        "default": "Alt+F3"
      },
      "description": "Close all tabs to the left"
    },
    "pin-unpin-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
    },
    "description": "Pin or unpin the current tab"
    }
  },
  "host_permissions": ["<all_urls>"],
  "browser_specific_settings": {
    "gecko": {
      "id": "FirefoxAddon@email.chhaina"
    }
  }
}
